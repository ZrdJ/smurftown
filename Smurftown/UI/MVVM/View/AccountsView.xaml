<UserControl x:Class="Smurftown.UI.MVVM.View.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smurftown.UI.MVVM.View"
             xmlns:viewModel="clr-namespace:Smurftown.UI.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <UserControl.DataContext>
        <viewModel:AccountsViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Height="60" VerticalAlignment="Top" Background="#24262e" Margin="20,10,20,10">
            <TextBlock Foreground="Gray" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"  Margin="20,0,0,0">FILTER</TextBlock>

            <ToggleButton IsChecked="{Binding OverwatchFiltered}" Style="{StaticResource BattlenetIconButtonTheme}" Margin="20,0,0,0" Width="50">
                <Image Source="pack://application:,,,/UI/Images/overwatch.png"  RenderOptions.BitmapScalingMode="HighQuality" Height="35" Width="35" />
            </ToggleButton>
            <ToggleButton IsChecked="{Binding HotsFiltered}" Style="{StaticResource BattlenetIconButtonTheme}" Margin="0" Width="50">
                <Image Source="pack://application:,,,/UI/Images/hots.png"  RenderOptions.BitmapScalingMode="HighQuality" Height="35" Width="35" />
            </ToggleButton>
            <ToggleButton HorizontalAlignment="Right" Style="{StaticResource BattlenetIconButtonTheme}" Margin="0" Width="60">
                <Image Source="pack://application:,,,/UI/Images/add.png"  Height="35" Width="35" />
            </ToggleButton>

        </DockPanel>

        <ItemsControl  Grid.Row="1"  ItemsSource="{Binding BattlenetAccounts, UpdateSourceTrigger=PropertyChanged}">
                
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                 
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                   
                </ItemsPanelTemplate>

                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:AccountCardView Width="200" Height="200" Margin="5">
                            <local:AccountCardView.DataContext>
                                <Binding Path="." Converter="{StaticResource BattlenetAccountToCardViewModelConverter}" />
                            </local:AccountCardView.DataContext>
                        </local:AccountCardView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <ScrollViewer Style="{StaticResource BattlenetScrollViewerTheme}" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
        
    </Grid>
</UserControl>
