<UserControl x:Class="Smurftown.UI.MVVM.View.AccountCardView"

             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smurftown.UI.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200">
    <Border Background="#25262a" CornerRadius="10" Padding="0" Margin="5">
        <DockPanel>
            <Border Background="White" DockPanel.Dock="Top" CornerRadius="10,10,0,0">
                <Image Source="{Binding ImageSource}" Height="70" Stretch="Uniform" Margin="0,10,0,10"/>
            </Border >
            <Button DockPanel.Dock="Bottom" Style="{StaticResource BattlenetButtonTheme}" Content="Öffnen" Width="90" Margin="10" Height="30"/>
        </DockPanel>
    </Border>
</UserControl>
